<mvc:View
	controllerName="app.customers.newproject.controller.Zadanie_rekrutacyjne_TOYA_SA"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:sfb="sap.ui.comp.smartfilterbar"
	xmlns:core="sap.ui.core"
	xmlns:sv="sap.ui.comp.smartvariants"
	xmlns:m="sap.m"
	height="100%">

	<m:Page id="12"
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding">

		<m:content>

			<Table
				id="table"
				selectionMode="MultiToggle"
				rows="{/Customers}"
				ariaLabelledBy="title">


				<columns>
					<Column
						id="company"
						width="11rem"
						sortProperty="CompanyName">
						<m:Label id="idCompanyName" text="Company Name" />
						<template>
							<m:Text id="19" text="{CompanyName}" wrapping="false" />
						</template>
					</Column>

					<Column
						id="address"
						width="11rem"
						showSortMenuEntry="false"
					>
						<m:Label id="idAddress" text="Address" />
						<template>
							<m:Text id="idTextAddress" text="{Address}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="city"
						width="11rem"
						showSortMenuEntry="false"
						filterProperty="City">
						<m:Label id="idCity" text="City" />
						<template>
							<m:Text id="idCityLabel" text="{City}" wrapping="false" />
						</template>
					</Column>

					<Column
						id="postalcode"
						width="11rem"
						showSortMenuEntry="false"
					>
						<m:Label id="idPostalCode" text="PostalCode" />
						<template>
							<m:Text id="idPostalCodeLabel" text="{PostalCode}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="phone"
						width="11rem"
						showSortMenuEntry="false"
					>
						<m:Label id="idPhone" text="Phone" />
						<template>
							<m:Text id="idPhoneLabel" text="{Phone}" wrapping="false" />
						</template>
					</Column>
				</columns>

				<footer>
					<m:OverflowToolbar id="infobar"></m:OverflowToolbar>
				</footer>
			</Table>

		</m:content>
	</m:Page>

</mvc:View>

